#!/bin/bash

# Env Vars:
# REPOSITORY: name of the image registry/namespace to get the images

# Clean up previous run
function clean() {
  set +x
  echo Cleaning...
  ic ce app delete -n hello -f --wto=0 > /dev/null 2>&1 || true
}

clean
[[ "$1" == "clean" ]] && exit 0

set -ex
export REPOSITORY=${REPOSITORY:-ibmcom}

# Create the app
ic ce app create -n troy-tririga-assistant-proxy --image ${REPOSITORY}/hello

# Get the URL of the app for later use
URL=$(ic ce app get -n troy-tririga-assistant-proxy -o jsonpath={.status.url})

# Now call it
curl -s $URL

if ! [[ "$(curl -s $URL)" == "Hello World" ]]; then
  echo "Unexpected output"
  exit 1
fi

# Clean up
clean